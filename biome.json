{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "useSemanticElements": "off",
        "useValidAnchor": "off"
      }
    },
    "ignore": [
      "src/components/custom/ColorItem.tsx",
      "src/components/custom/ColorSelector.tsx",
      "src/components/custom/BrandModelCombobox.tsx",
      "src/components/custom/SucursalSelector.tsx",
      "src/app/(app)/sales/FilterSection.tsx",
      "src/components/ui/sidebar.tsx"
    ]
  }
}
