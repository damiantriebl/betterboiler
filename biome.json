{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "suspicious": {
        "noExplicitAny": "off"
      },
      "a11y": {
        "useSemanticElements": "off",
        "useValidAnchor": "off"
      }
    },
    "ignore": [
      "src/app/(app)/sales/components/QuoteBrigePdf.tsx"
    ]
  }
}

