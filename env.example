# Configuración de variables de entorno - EJEMPLO
# ================================================
# Copia este archivo a .env.local y configura tus valores reales

# 🔗 Base de datos Neon
# Para desarrollo: usar branch de desarrollo
# Para producción: usar branch principal (main)
DATABASE_URL="postgresql://username:password@ep-example.us-east-1.neon.tech/neondb?sslmode=require"

# 🔐 Auth configuration
BETTER_AUTH_SECRET="your-super-secret-auth-key-here-must-be-32-chars-minimum"
BETTER_AUTH_URL="http://localhost:3000"

# 📧 SendGrid (para emails)
SENDGRID_API_KEY="SG.your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="no-reply@yourdomain.com"

# ☁️ AWS S3 (para uploads de archivos)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET_NAME="your-s3-bucket-name"

# 🌍 Environment
NODE_ENV="development"
NEXT_PUBLIC_ENV="development"

# 🏢 Organization defaults
DEFAULT_ORG_NAME="Mi Empresa"

# ⚙️ URLs específicas por branch (para referencia)
# Development: postgresql://user:pass@ep-xxx-development.neon.tech/neondb?sslmode=require
# Production:  postgresql://user:pass@ep-xxx-main.neon.tech/neondb?sslmode=require 